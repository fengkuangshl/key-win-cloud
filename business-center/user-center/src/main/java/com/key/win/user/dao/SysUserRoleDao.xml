<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.key.win.user.dao.SysUserRoleDao">

	<delete id="deleteUserRole">
		delete from sys_user_role
		<where>
			<if test="userId != null">
				and user_id = #{userId}
			</if>
			<if test="roleId != null">
				and role_id = #{roleId}
			</if>
		</where>
	</delete>

    <insert id="saveBatchUserIdAndRoleIds">
        INSERT INTO
        sys_user_role(create_date,create_user_id,create_user_name,enable_flag,update_date,update_user_id,update_user_name,version,user_id,role_id)
        VALUES
        <foreach collection="roleIds" item="roleId" separator=",">
            (current_timestamp(),'${@com.key.win.common.util.SysUserUtil@getUserId()}','${@com.key.win.common.util.SysUserUtil@getUserName()}',1,null,null,null,0,#{userId},#{roleId})
        </foreach>
    </insert>

    <insert id="saveBatchUserIdsAndRoleId">
        INSERT INTO
        sys_user_role(create_date,create_user_id,create_user_name,enable_flag,update_date,update_user_id,update_user_name,version,user_id,role_id)
        VALUES
        <foreach collection="userIds" item="userId" separator=",">
            (current_timestamp(),'${@com.key.win.common.util.SysUserUtil@getUserId()}','${@com.key.win.common.util.SysUserUtil@getUserName()}',1,null,null,null,0,#{userId},#{roleId})
        </foreach>
    </insert>
</mapper>